# 生产环境配置
NODE_ENV=production
PORT=3000

# 数据库配置 - 生产环境需要使用云数据库
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/gamehub?retryWrites=true&w=majority

# JWT配置
JWT_SECRET=your-super-secure-production-jwt-secret-key
JWT_EXPIRE=7d

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# 游戏API配置
GAME_API_KEY=your-game-api-key
GAME_API_URL=https://api.games.com